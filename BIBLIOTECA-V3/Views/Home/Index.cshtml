@{
    ViewBag.Title = "Biblioteca Virtual";
}

<main class="container my-5">
    <div class="text-center">
        <h1 class="display-4 text-primary">📚 Bienvenido a la Biblioteca Virtual 📚</h1>
        <p class="lead text-secondary">Explora y administra autores y libros de manera sencilla.</p>
    </div>

    <div class="row mt-5">
        <!-- Card 1: Autores -->
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h3 class="card-title text-primary">Gestionar Autores</h3>
                    <p class="card-text">Agrega, edita y administra la lista de autores registrados en la biblioteca.</p>
                    <a href="@Url.Action("Index", "Autor")" class="btn btn-dark">📖 Ver Autores</a>
                </div>
            </div>
        </div>

        <!-- Card 2: Libros -->
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h3 class="card-title text-primary">Gestionar Libros</h3>
                    <p class="card-text">Explora, añade y organiza libros en la biblioteca.</p>
                    <a href="@Url.Action("Index", "Libro")" class="btn btn-dark">📚 Ver Libros</a>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Georgia', serif;
    }

    .card {
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }
</style>
