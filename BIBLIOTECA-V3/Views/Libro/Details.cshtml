@model CRUD_BIBLIOTECA.Models.Libro

@{
    ViewBag.Title = "Detalles del Libro";
}

<main class="container my-5">
    <div class="text-center">
        <h1 class="display-4 text-primary">📖 Detalles del Libro</h1>
    </div>

    <div class="card shadow-lg border-0 p-4">
        <h4 class="text-secondary">@Model.Titulo</h4>


        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>📚 Título:</strong> @Model.Titulo</li>
            <li class="list-group-item"><strong>✍️ Autor:</strong> @Model.Autor.Nombre</li>
        </ul>

        <div class="text-center mt-4">
            <a href="@Url.Action("Edit", new { id = Model.LibroID })" class="btn btn-warning">✏️ Editar</a>
            <a href="@Url.Action("Index")" class="btn btn-outline-primary">🏠 Volver</a>
        </div>
    </div>
</main>
