@model CRUD_BIBLIOTECA.Models.Libro

@{
    ViewBag.Title = "Eliminar Libro";
}

<main class="container my-5 text-center">
    <h1 class="text-danger">⚠️ Eliminar Libro</h1>
    <p class="lead text-secondary">¿Estás seguro de que deseas eliminar este libro?</p>

    <div class="card shadow-lg border-0 p-4">
        <h4 class="text-primary">@Model.Titulo</h4>
        <p class="text-muted">Autor: @Model.Autor.Nombre</p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mt-4">
                <button type="submit" class="btn btn-danger">🗑️ Eliminar</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">❌ Cancelar</a>
            </div>
        }
    </div>
</main>
