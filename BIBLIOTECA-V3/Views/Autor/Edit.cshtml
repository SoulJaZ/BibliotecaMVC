@model CRUD_BIBLIOTECA.Models.Autor

@{
    ViewBag.Title = "Editar Autor";
}

<main class="container my-5">
    <div class="text-center">
        <h1 class="display-4 text-primary">✏️ Editar Autor</h1>
    </div>

    <div class="card shadow-lg border-0 p-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.AutorID)

            <div class="mb-3">
                <label class="form-label">Nombre del Autor</label>
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success">✅ Guardar Cambios</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-primary">🏠 Volver</a>
            </div>
        }
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
